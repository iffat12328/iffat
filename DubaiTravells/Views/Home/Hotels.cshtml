@section Scripts
    {
    <script>
        $(document).ready(function () {


            $(".view-selector ul li").on('click', function (e) {
                var index = $(this).data('ref');

                console.log(index);

                $(".view-selector ul li").css('color', 'white');

                $(this).css('color', 'blue');

                $(".view-container .restaurant").hide();

                $(".view-container .restaurant").eq(index).show();
            });

            $(".view-container .restaurant").hide();
            $(".view-container .restaurant").eq(2).show();
            $(".view-selector ul li").eq(2).css("color", "blue");

        });
    </script>
}